const viewboxHeight = 10
const viewboxWidth = 10


console.log(...Array(viewboxWidth).keys());
---


<svg
    xmlns="http://www.w3.org/2000/svg" 
    viewBox={`0 0 ${viewboxHeight} ${viewboxWidth}`}
    x="0"
    y="0"
    class="icon-toggle"
    aria-expanded="false"
>

    <g>
        {[...Array(viewboxWidth+1).keys()].map((i) =>
            <line 
                x1={i} x2={i}
                y1={0} y2={viewboxHeight}
                style="stroke: var(--clr-primary-transparent); stroke-width: 0.02;"
            />
        )}

        {[...Array(viewboxHeight+1).keys()].map((i) =>
            <line 
                x1={0} x2={viewboxWidth}
                y1={i} y2={i}
                style="stroke: var(--clr-primary-transparent); stroke-width: 0.02;"
            />
        )}
    </g>



    <g fill="var(--clr-primary)" fill-rule="evenodd">
        
        <path 
            d="
                M5,1 
                l-4,0
                l0, 5
                Q 1,9.5 5,9.5 T 9, 6
            " 
        />

        <path 
            d="
                M9,6 
                l0,-5
                l-3.67, 0
                v 6
                Q 3.4,7.5 3,8.5
            " 
        />


        <rect
            x="2" y="3" width="3" height="1.4" rx="5"
            transform="translate(0.4,-0.5) rotate(10)"
        />

        <rect
            x="1.5" y="9.5" width="2.5" height="1.5" rx="5"
            transform="translate(0,0.0) rotate(-16)"
        /> 

        <rect
            x="6" y="3" width="2.35" height="1.3" rx="0.1"
            fill="none"
            stroke="#000"
            stroke-width="0.1"
        /> 

        <circle 
            cx="1"
            cy="1"
            r="0.25" 
            style="fill:rgb(255,0,0);"
        />

        <circle 
            cx="9"
            cy="1"
            r="0.25" 
            style="fill:rgb(255,0,0);"
        />
    </g>

</svg>

<style>
    .icon-toggle[aria-expanded='true'] .path1 {
        d: path("M8,2 L2,8");
